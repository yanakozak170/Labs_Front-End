// Global styles
body
  font-family: 'Roboto', sans-serif
  margin: 0
  padding: 0
  background-color: #ecf0f1
  color: #333
  line-height: 1.6

// Top bar
.top-bar
  background-color: #2c3e50
  color: white
  display: flex
  justify-content: center
  padding: 20px 10px

// Logo container and styling
.logo-container
  display: flex
  align-items: center

.logo-img
  width: 400px
  max-height: 400px
  margin-right: 20px

.logo-img img
  width: 100%
  height: auto
  display: block

.logo-text
  h1
    font-size: 2rem
    margin-bottom: 5px

  .tagline
    font-size: 1.2rem
    color: #bdc3c7
    font-weight: bold

// Main section styles
main
  padding: 20px 10px
  text-align: center

// Products section
.products
  display: flex
  justify-content: center
  gap: 20px
  margin-bottom: 20px

.product
  border: 1px solid #ddd
  background-color: white
  display: flex
  align-items: center
  padding: 10px
  border-radius: 8px
  width: 600px
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1)

  &:hover
    transform: translateY(-5px)
    transition: transform 0.3s

.image-placeholder
  width: 300px
  height: 225px
  background-size: cover
  background-position: center
  border-radius: 8px
  margin-right: 10px

.image-placeholder img
  width: 100%
  height: 100%
  object-fit: cover
  border-radius: 8px

.product-info
  text-align: left

.product
  h2
    font-size: 1.25rem
    margin-bottom: 10px

// Subscribe section
.subscribe
  margin-bottom: 20px

.email-input
  padding: 10px
  width: 250px
  border: 1px solid #ccc
  border-radius: 4px 0 0 4px
  margin-right: -1px
  outline: none

.subscribe-button
  padding: 10px 15px
  background-color: #e74c3c
  color: white
  border: none
  border-radius: 0 4px 4px 0
  cursor: pointer
  transition: background-color 0.3s

  &:hover
    background-color: #c0392b

// Footer section
footer
  background-color: #2c3e50
  color: white
  padding: 20px 10px
  text-align: center

.footer-list
  list-style: none
  display: flex
  justify-content: center
  gap: 20px
  padding: 0
  margin-bottom: 10px

.footer-list li a
  color: #bdc3c7
  text-decoration: none
  transition: color 0.3s

  &:hover
    color: #e74c3c

footer p
  margin-top: 10px
  font-size: 0.8rem
  color: #bdc3c7
  text-align: center
